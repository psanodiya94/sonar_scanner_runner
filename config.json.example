{
  "_comment": "Sonar Scanner Runner Configuration File",
  "_instructions": "Copy this file to 'config.json' and update with your settings",

  "sonar_host_url": "http://localhost:9000",
  "sonar_token": "your_sonarqube_token_here",

  "workspace_dir": "./temp",

  "build_wrapper_cmd": "build-wrapper-linux-x86-64",
  "sonar_scanner_cmd": "sonar-scanner",

  "server": {
    "host": "0.0.0.0",
    "port": 8080
  },

  "logging": {
    "level": "INFO",
    "log_dir": "./logs"
  },

  "cleanup": {
    "auto_cleanup": true,
    "keep_failed_builds": false
  },

  "build_prerequisites": {
    "_comment": "Commands to execute before build for each build system",
    "global": [],
    "maven": [
      "export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64",
      "export PATH=$JAVA_HOME/bin:$PATH"
    ],
    "gradle": [
      "export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64",
      "chmod +x gradlew"
    ],
    "cmake": [
      "export CC=gcc",
      "export CXX=g++"
    ],
    "make": [
      "export CC=gcc",
      "export CXX=g++"
    ],
    "npm": [
      "export NODE_ENV=production",
      "npm config set strict-ssl false"
    ],
    "python": [
      "python3 -m venv venv",
      "source venv/bin/activate"
    ]
  }
}
